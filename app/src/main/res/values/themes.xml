<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.TransparentSystemUi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="Theme.Launcher" parent="Theme.TransparentSystemUi">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Theme.App" parent="Theme.TransparentSystemUi">
        <item name="android:colorPrimary">@color/blue_var_1</item>
        <item name="android:colorAccent">@color/yellow</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/hint_light</item>
    </style>

</resources>